<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityWaterBottle"
    android:paddingTop="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product: Paint"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/recycable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product"
        android:text="Recyclable: No"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/split1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/recycable"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/split1"
        android:text="Product Information:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/recyclingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information"
        android:text="There are three main types of paint:
\n- Latex Paint: Labeled as 'latex' or 'water based' or lists water as an active ingredient
\n- Oil-based Paint: Labeled as 'oil-based', includes oil as active ingredient, contains instructions for cleanup
and has flammable warning
\n- Spray Paint"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/split2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/recyclingInfo"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/howTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/split2"
        android:text="Why Unrecyclable? "
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howTo"
        android:text="Paint is a potentially hazardous household waste."
        android:textSize="15sp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/split3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/locations"
        android:background="@color/black"/>

        <TextView
            android:id="@+id/Reuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/split3"
            android:text="How To Dispose: "
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/waysToReuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Reuse"
            android:text="See Savannah-Chatham's Paint Disposal Guide:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/waysToReuse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/waysToReuse"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/paint"
            android:textColor="@color/black"
            android:textSize="15sp" />

</RelativeLayout>
</ScrollView>