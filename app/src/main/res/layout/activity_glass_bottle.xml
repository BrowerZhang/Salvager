<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityWaterBottle"
    android:paddingTop="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product: Glass Bottle"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/recycable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product"
        android:text="Recyclable: Yes"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/split1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/recycable"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/split1"
        android:text="Product Information:"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/recyclingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information"
        android:text="Three differing types of glass bottles (all are recyclable):
\n- Number 70: Clear Glass
\n- Number 71: Green Bottles
\n- Number 72: Brown Bottles
"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/split2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/recyclingInfo"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/howTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/split2"
        android:text="How to Recycle: "
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/howToRecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howTo"
        android:text="Locations:"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howToRecycle"
        android:text="- No Locations"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/howToRecycle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locations"
        android:text="Services: "
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howToRecycle2"
        android:text="- Savannah (City Government Service)"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/split3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/services"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/Reuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/split3"
        android:text="Other Ways to Reuse: "
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"/>

        <TextView
            android:id="@+id/waysToReuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Reuse"
            android:text="- Glass Bottle Vase"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/waysToReuseImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/waysToReuse"
            android:layout_marginTop="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/gb_vase" />

        <TextView
            android:id="@+id/waysToReuse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/waysToReuseImage"
            android:text="- Glass Bottle Container"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/waysToReuseImage2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/waysToReuse2"
            android:layout_marginTop="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/gb_container" />

    </RelativeLayout>
</ScrollView>