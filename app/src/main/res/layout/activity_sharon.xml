<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySharon">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/marker"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Sharon Park Drop-Off Center \n
        Address: 50 Kelly Hill Road, Garden City, GA \n
        Hours: Tuesday - Saturday 8:30 to 5:00 \n
        What Can Be Recycled at This Location: \n
        - Cardboard \n
        - News Paper \n
        - Magazines \n
        - Office Paper \n
        - Scrap Metal \n
        - Cans (Cleaned soup or food) \n
        - Plastics 1 and 2 (clear bottle, Milk Jug, and Detergent bottle) \n
        "
        android:textSize="10sp"/>




</RelativeLayout>
